# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Environment
NODE_ENV=development

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:8080

# Builder.io API Key
VITE_PUBLIC_BUILDER_KEY=your_builder_public_key_here

# Stripe Configuration
# Get these from your Stripe Dashboard: https://dashboard.stripe.com/apikeys

# Stripe Publishable Key (used in frontend)
# This starts with pk_test_ or pk_live_
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here

# Stripe Secret Key (used in backend)
# This starts with sk_test_ or sk_live_
STRIPE_SECRET_KEY=sk_test_your_secret_key_here

# Stripe Webhook Secret (optional, for webhook verification)
# Get this from your Stripe webhook endpoint settings
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Database Configuration (if using)
DATABASE_URL=your_database_connection_string_here

# JWT Secret (for authentication if implemented)
JWT_SECRET=your_super_secure_jwt_secret_here_min_32_chars

# Session Secret
SESSION_SECRET=your_super_secure_session_secret_here_min_32_chars

# API Configuration
PING_MESSAGE=pong

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
PAYMENT_RATE_LIMIT_MAX=10